section.newsletter.offset-section
  .container-md
    .row.align-items-center.justify-content-around
      .col-auto.col-lg-5.text-center.text-lg-start
        h5.pb-3.newsletter__title Sign up for newsletter
        p.lh-lg.newsletter__description Cu qui soleat partiendo urbanitas. Eum aperiri indoctum eu, homero alterum.
      .col-auto
        form(class=["js-form-validate"])
          .row.py-4
            .col-auto
              +field({
                type: 'email',
                placeholder: 'Email address',
                classes: 'border rounded h-100 py-4 ps-4 pe-5 newsletter__input',
                validate: true,
              })
            .col-auto
              +button({
                buttonType: 'button',
                type: 'default',
                content: 'Safe me',
                classes: 'rounded newsletter__button',
              })
